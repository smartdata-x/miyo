<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/music_type_item_selector">
    <TextView
            android:id="@+id/name"
            android:layout_marginLeft="@dimen/music_type_item_left_margin"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/music_type_item_height"
            android:gravity="center_vertical"/>
    <ImageView
            android:id="@+id/playing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/music_type_item_left_margin"
            android:src="@anim/current_type_anim"/>
</RelativeLayout>