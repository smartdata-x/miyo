<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="text_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/text_title_selector</item>
        <item name="android:textSize">@dimen/text_title_size</item>
    </style>
    <style name="text_login_bg_style">
        <item name="android:layout_width">@dimen/text_login_width</item>
        <item name="android:layout_height">@dimen/text_login_height</item>
        <item name="android:background">@drawable/user_login_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_chat_style">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginRight">@dimen/chat_left_margin</item>
        <item name="android:layout_marginLeft">@dimen/chat_left_margin</item>
        <item name="android:paddingRight">@dimen/chat_left_padding</item>
        <item name="android:paddingLeft">@dimen/chat_left_padding</item>
        <item name="android:background">@drawable/chat_text_shape</item>
    </style>

    <style name="LoadingDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="login_btn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginLeft">@dimen/login_btn_margin_left</item>
        <item name="android:layout_marginRight">@dimen/login_btn_margin_left</item>
        <item name="android:layout_marginTop">@dimen/login_btn_margin_top</item>
    </style>

    <style name="login_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/text_login_selector</item>
        <item name="android:drawablePadding">@dimen/login_ico_padding</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="btn_share_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/text_grey_color</item>
        <item name="android:textSize">@dimen/share_text_size</item>
        <item name="android:background">@drawable/commen_selector</item>
    </style>

    <style name="user_head_style">
        <item name="android:layout_width">@dimen/head_diameter</item>
        <item name="android:layout_height">@dimen/head_diameter</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/head_left_margin</item>
    </style>

    <style name="head_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_middle</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="head_right_icon_style">
        <item name="android:layout_width">@dimen/weather_icon_width</item>
        <item name="android:layout_height">@dimen/weather_icon_width</item>
        <item name="android:layout_marginLeft">@dimen/head_left_icon_margin_left</item>
        <item name="android:layout_marginRight">@dimen/head_left_icon_margin_right</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="left_drawer_menu_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/left_drawer_menu_item_height</item>
        <item name="android:paddingLeft">@dimen/head_left_margin</item>
        <item name="android:paddingRight">@dimen/head_left_margin</item>
        <item name="android:background">@drawable/commen_selector</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="left_drawer_menu_item_icon_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/left_drawer_menu_item_icon_margin_right</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="left_drawer_menu_item_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_middle</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

</resources>